{
  "extends": "@quasar/app/tsconfig-preset",
  "compilerOptions": {
    "declaration": true,
    "strict": true,
    "importHelpers": true,
    "downlevelIteration": true,
    "declarationDir": "./types/",
    "target": "es5",
    "lib": ["es5", "es2015", "es2016", "es2017", "dom"],
    "baseUrl": ".",
    "paths": {
      "*": ["*"],
      "@/*": ["./src/*"],
      "/@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/router/routes.ts"
  ]
}
